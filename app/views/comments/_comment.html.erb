<!-- Show 1 article comment per line -->
<!-- Only show if one comment exist for the article -->
<% if comment.id != nil %>
<div class="row">
  <div class="col-md-6 col-xs-12 commentRow"> <!-- col-md-12 col-xs-12 --> 

    <h4 class="articleComment"><%= comment.aricle_comment %></h4>

    <h5 class="articlePostedByInfo">Posted by: <%= comment.posted_by %><span>  /  <%= comment.created_at %> </span></h5>

    <h5 class="articlePostedByInfo">Email: <%= comment.commenter_email %></h5>

    <!-- Show Iframe if embeded image, image_tag if jpg or jeg and regular text if not -->
    <% if comment.commenter_imageorvideo != "" %>
     
      <% if comment.commenter_imageorvideo.include? "embed" %>
        <div class="youtube_video">
          <iframe class= "youtubeVideo" src="<%=comment.commenter_imageorvideo %>" frameborder="0" allowfullscreen></iframe>
        </div>

      <% elsif comment.commenter_imageorvideo.include? "jp" %>
          <p>
            <%= image_tag(comment.commenter_imageorvideo, alt: "Edit Entry", class: "showArticleVideo img-responsive")%>
          </p> 

      <% else %>
        <p class="articleText"> <%= comment.commenter_imageorvideo %> </p>
     <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-xs-12 commentRow"> <!-- col-md-12 col-xs-12 --> 

    <div class="commentButtons">
      <!-- Show the Destroy button only if date is the same as today -->
      <% current_time = DateTime.now %>
      <% if comment.created_at.to_date == current_time.to_date %>
        <p>
        <%= link_to 'Remove Comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<% end %>