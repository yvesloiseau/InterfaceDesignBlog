<!-- CONTACT PAGE                                                     *******-->
<div class="container-fluid contactc anchor_contact" id="contactus">
  <div class="row" id="work">
    <div class="col-xs-12 col-sm-6 col-md-6">

      <div class="contact_Header">
        <!-- <h1>Contact Page</h1> -->
        <h2>My name is : Yves the Bird</h2>
        <div class="contact_email">
          <h3>You can reach me at this email address:
            <span class="email_bold rwd-line"><strong>loiseau.y@gmail.com</strong>
            </span>
          </h3>
        </div>
      </div>

      <div class="contact_Email">
        <h3>Or by phone at: <span class="email_bold rwd-line"><strong>+1(514) 999-9999</strong></span></h3>
      </div>


      <div class="myBackground">
        <h3>My background</h3>
          <div class="contact_page_indent">
            <p>I'm an IT professional working in the Information Technology domain for over 35 years.</p>
            <p>Worked my way up in the IT world, started as a programmer and now acting as Project Manager for more than 10 years.</p>
            <p>I'm now coming back to my roots and re-exploring the more creative aspect of the IT business and Web design and development is the perfect match for me.</p>
          </div>

        <h3 class="email_bold"><strong>Now serving all of your web development needs</strong></h3>
      </div>

      <div class="moreInfo">
        <div class="contact_Page_Indent">
          <h3>Write to us</h3>
          <p>We appreciate your comments.</p>
          <h4><strong>Also, please contact us if you would like to contribute to ths blog</strong></h4>
          <br>
          <p><strong>You can also check my other work in progress at : </p>
          <p>https://mycfproject.herokuapp.com/</strong></p>
          <p>Thank you and have a nice day</p>
        </div>
      </div>
    </div>

    <!-- Form to caputre users feedback and to get their contact information -->
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h1>Please contact us</h1>
      <%= flash[:notice] %>

      <%= form_tag("/my_blog/thank_you") do %>
      <div class="fieldgroupContactUsForm">
        <%= label_tag :name %>
        <%= text_field_tag(:name, nil, class: "name_ContactUs_Form formField", placeholder: "Enter Your Name", size: 30) %>
      </div>
      <div class="fieldgroupContactUsForm">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: "name_ContactUs_Form formField", placeholder: "Enter Your email", size: 40 %>
      </div>
      <div class="fieldgroupContactUsForm">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "message_ContactUs_Form formField", placeholder: "Enter Your Message", cols: 60, rows: 25 %>
      </div>

      <%= submit_tag "Send", class: "contactSubmit btn btn-primary btn-sm" %>
      <% end %>
    </div>

  </div>
</div>

