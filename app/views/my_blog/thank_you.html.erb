<!-- Issue confirmation message after email is sent -->
<div class="panel panel-default thank-you-popup">
  <div class="panel-body">
    <p>Thank you for writing to us! </p>
    <br>
    <p>We have received your message and will respond to you very soon.</p>
    <br>
    <p>Have a great day!</p>
  </div>

  <div class="thank-you-button">
    <!-- Back to Product list -->
    <%= button_to "Back", my_blog_contact_path,
      class: 'btn btn-primary btn-sm inline', :method => :get %>

    <!-- Go back HOME-->
    <%= button_to "Home", root_path,
      class: 'btn btn-primary btn-sm inline', :method => :get %>
  </div>

</div>