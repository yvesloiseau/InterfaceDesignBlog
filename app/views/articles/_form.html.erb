<div class="container">
  <%= form_for(article) do |f| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %>
          prohibited this article from being saved:
        </h2>

        <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="field">
      <%= f.label :article_title %>
      <%= f.text_field :article_title %>
    </div>

    <div class="field">
      <%= f.label :article_text %>
      <%= f.text_area :article_text %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="field">
      <%= f.label :posted_by %>
      <%= f.text_field :posted_by %>
    </div>

    <div class="field">
      <%= f.label :posted_date %>
      <%= f.date_select :posted_date %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="field">
      <%= f.label :article_image %>
      <%= f.text_field :article_image %>
    </div>

    <div class="field">
      <%= f.label :article_video %>
      <%= f.text_field :article_video %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="field">
      <%= f.label :article_details %>
      <%= f.text_field :article_details %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-xs-12">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
</div>
  <% end %>
</div>
